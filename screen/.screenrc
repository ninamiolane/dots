# huge scrollback buffer
defscrollback 5000

# no welcome message
startup_message off

bind T screen -t '% |top' top 
bind R screen -t '% |root:' su
startup_message off
caption always "%{wb}%n%f %t %{wk} %?%-Lw%?%{wb}[%n*%f %t]%?(%u)%?%{wk}%?%+Lw%? %{wk}"
hardstatus alwayslastline "%{+b kr}host: %{kw}%H%{kg} %c - %D %d.%m.%Y %{kr}(load: %l) %-26=%1`"
